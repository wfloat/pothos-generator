{
  "name": "pothos-generator",
  "description": "Generator that emits a Pothos based GraphQL schema from your defined Prisma schema. Provides enhanced type-safety and error detection when the generated GraphQL schema's state diverges from your Prisma schema.",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "tsc && node dist/src/index.js",
    "build": "tsc --watch",
    "serve": "tsc && node dist/example/server.js",
    "generate": "npx prisma generate --no-engine --watch"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@apollo/server": "^4.9.5",
    "@mrleebo/prisma-ast": "^0.8.0",
    "@pothos/core": "^3.40.0",
    "@pothos/plugin-prisma": "^3.62.0",
    "@pothos/plugin-relay": "^3.45.0",
    "@prisma/client": "^5.6.0",
    "commander": "^11.1.0",
    "dataloader": "^2.2.2",
    "graphql": "^16.8.1",
    "kysely": "^0.26.3",
    "lodash": "^4.17.21",
    "pg": "^8.11.3",
    "prisma-kysely": "^1.7.1"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.9.4",
    "@types/pg": "^8.10.9",
    "typescript": "^5.3.2"
  }
}
